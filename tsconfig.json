{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "lib": ["es2017", "dom", "es2021"],
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "types": ["node"],
    "esModuleInterop": true
  },
  "include": [
    "declarations.d.ts",
    "declarations/*.d.ts",
    "schemas/**/*.json",
    "bin/*.js",
    "lib/**/*.js",
    "tooling/**/*.js"
  ]
}
